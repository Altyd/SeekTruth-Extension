{
  "manifest_version": 3,
  "name": "SeekTruth",
  "version": "1.0",
  "description": "Analyze the bias of news articles on the web.",
  "permissions": ["scripting", "activeTab", "cookies", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "/scripts/background.js"
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "48": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["/scripts/content.js"],
      "run_at": "document_end"
    }
  ]
}
